<%= form_with model: [@user, @post, @comment], url: user_post_comments_path(@user, @post), method: :post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :text, "Comment:", class: "label" %>
    <%= f.text_area :text, class: "textarea", placeholder: "Write your comment here..." %>
  </div>
  <div class="form-actions">
    <%= f.submit "Submit Comment", class: "button" %>
  </div>
<% end %>
