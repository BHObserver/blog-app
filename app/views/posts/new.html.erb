<h3 class="post-heading">Create a new post 📝</h3>

<%= form_with model: [@user, @post], url: user_posts_path(@user), method: :post, html: { class: 'post-form' } do |f| %>

  <div class="form-group">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :text, class: 'form-label' %>
    <%= f.text_area :text, class: 'form-textarea' %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit the post 📝", class: 'submit-btn' %>
  </div>

<% end %>
