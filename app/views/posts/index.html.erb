<div class="container">
  <div class="user-info">
    <div class="img">
      <%= image_tag @user.photo, alt: "User Photo", class: "user-photo" %>
    </div>
    <div class="user">
      <h2><%= link_to @user.name, user_path(@user) %></h2>
      <p><strong>Number of Posts:ğŸ“</strong> <%= @user.posts.count %></p>
    </div>
  </div>

  <% @posts.each_with_index do |post, index| %>
    <div class="post">
    <div class="top-bar">
      <h4>ğŸ“ Post <%= index + 1 %>: <%= link_to post.title, user_post_path(@user, post) %></h4>
      <p class="count">Comments:<%= post.comments.count %>ğŸ’¬ | Likes:<%= post.likes.count %>ğŸ‘</p>
    </div>
    <p><%= post.text %></p>

      <div class="comments">
        <% post.recent_comments.each do |comment| %>
          <div class="comment">
            <p> <%= link_to comment.user.name, user_path(comment.user) %>: <%= comment.text %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%= link_to 'Pagination', user_posts_path(@user), class: 'button' %>
