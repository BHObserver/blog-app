<div class="container">
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>">
      <%= value %>
    </div>
  <% end %>

  <div class="post">
    <div class="top-bar">
      <h4><%= @post.title %></h4>
      <p class="count">Comments: <%= @post.comments.count %> ğŸ’¬ | Likes: <%= @post.likes.count %> ğŸ‘</p>
    </div>
    <p><%= @post.text %></p>
    <%= button_to 'Delete Post ğŸ“', user_post_path(user_id: @post.author_id, id: @post.id), method: :delete, class: 'button' if can? :destroy, @post %>
  </div>

  <div class="comments">
    <% @post.comments.each do |comment| %>
      <div class="comment">
        <p>
          ğŸ‘¤<%= User.find(Comment.find(comment.id).user_id).name %>: <%= comment.text %>
          <%= button_to 'Delete Comment', user_post_comment_path(user_id: comment.user_id, post_id: comment.post_id, id: comment.id), method: :delete, class: 'button' if can? :destroy, comment %>
        </p>
      </div>
    <% end %>
  </div>

  <div class="container-opinions">
    <%= link_to "Add new comment", new_user_post_comment_path(@post.author_id, @post), class: 'add-comment' %>
    <%= form_with url: user_post_likes_path(@post.author_id, @post), method: :post, local: true, class: 'like-form' do |f| %>
      <%= f.submit "Like", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
